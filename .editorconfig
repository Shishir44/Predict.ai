root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,md,yml,yaml,txt,ipynb,json,csv,tsv,html,css,js,jsx,ts,tsx}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.ipynb]
trim_trailing_whitespace = false
