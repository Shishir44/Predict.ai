# Environment Variables for Predict.ai Battery Health System

# UI Configuration
UI_PORT=8501
STREAMLIT_SERVER_PORT=8501

# Model Configuration (Current Trained Models)
RANDOM_FOREST_MODEL_PATH=models/random_forest_soh_model.joblib
FEATURE_SCALER_PATH=models/feature_scaler.joblib
LSTM_MODEL_PATH=models/lstm_soh_model.h5
MODEL_METADATA_PATH=models/model_metadata.json

# Data Configuration
NASA_DATASET_PATH=data/processed/nasa_comprehensive_dataset.csv
RAW_DATA_DIR=data/raw/5
PROCESSED_DATA_DIR=data/processed

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Application Configuration
APP_TITLE=Battery Health Monitor
APP_DESCRIPTION=Li-ion Battery SOH/SOC Prediction System
DEFAULT_CONFIDENCE_SOH=0.85
DEFAULT_CONFIDENCE_SOC=0.75

# Model Performance Thresholds
SOH_EXCELLENT_THRESHOLD=90
SOH_GOOD_THRESHOLD=80
SOH_FAIR_THRESHOLD=70
SOH_POOR_THRESHOLD=60

SOC_HIGH_THRESHOLD=80
SOC_MEDIUM_THRESHOLD=50
SOC_LOW_THRESHOLD=20

# Feature Engineering
MAX_CYCLE_COUNT=3000
REFERENCE_CAPACITY=100.0
REFERENCE_TEMPERATURE=24.0

# TensorFlow Configuration
TF_CPP_MIN_LOG_LEVEL=2
TF_ENABLE_ONEDNN_OPTS=0
